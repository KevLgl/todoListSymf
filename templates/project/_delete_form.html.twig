<form method="post" action="{{ path('project_delete', {'id': project.id}) }}" onsubmit="return confirm('Etes vous sur de vouloir supprimer ce projet?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.id) }}">
    <button class="btn btn-danger my-2 float-right">Supprimer</button>
</form>
