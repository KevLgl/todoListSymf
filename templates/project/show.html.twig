{% extends 'template.html.twig' %}

{% block title %}Mon projet{% endblock %}

{% block main %}

<a class="btn btn-secondary" href="{{ path('project_index') }}"> Revenir à la liste des projets</a>
    <h1 class="text-center m-3 display-4">{{ project.title }}</h1>
        <div class="jumbotron bg-light">
            <h1 class="display-3">{{ project.content }}</h1>
            <p class="lead">Créé le {{ project.creationDate ? project.creationDate|date('Y-m-d H:i:s') : '' }}</p>
             <p class="lead text-warning">A finir avant le {{ project.deadline ? project.deadline|date('Y-m-d H:i:s') : '' }}</p>
            <div class="lead">
             {% for task in tasks %}
            {{ task.title }}
             {% endfor %}
            
            
            </div>
            <hr class="my-4">
            <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
            <p class="lead">
            <a class="btn btn-primary btn-lg" href="#" role="button">Ajouter tache</a>
            </p>
            <a class="btn btn-secondary" href="{{ path('project_edit', {'id': project.id}) }}">Modifier</a>
              {{ include('project/_delete_form.html.twig') }}
        </div>


  
{% endblock %}
